<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Port for non SSL communication</description>
        <param-name>portNonSSL</param-name>
        <param-value>8080</param-value>
    </context-param>
    <context-param>
        <description>Port for SSL Communication</description>
        <param-name>portSSL</param-name>
        <param-value>8181</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>HeadOfProgramme</display-name>
        <web-resource-collection>
            <web-resource-name>HeadOfProgramme</web-resource-name>
            <description/>
            <url-pattern>/headOfProgramme/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>EESSA</realm-name>
        <form-login-config>
            <form-login-page>/jsp/HomeS.jsp</form-login-page>
            <form-error-page>/jsp/Home.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Student</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Teacher</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Head of Programme</role-name>
    </security-role>
</web-app>
